{{>header}}

<a href="/project/">Back</a>
<div class="container">
{{#project}}
  
        <div class="row">
          <div class="form-group">
            <label>Project Name:</label>
            <input type="text" class="form-control" disabled value="{{title}}">
          </div>
          <div class="form-group">
              <label>Module:</label>
              <input type="text" class="form-control" disabled value="{{module}}">
          </div>
          <div class="form-group">
              <label>Due Date:</label>
              <input type="text" class="form-control" disabled value="{{dueDate}}">
          </div>
          <div>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal">
              Edit
            </button>
          </div>
        </div>
        
        <form action="/project/edit/{{_id}}/addmilestone" method="post">
          <div class="row">
            <div class="card w-75">
              <div class="card-body">
                <div class="col">
                  <div class="form-group">
                      <label>Milestone Name:</label>
                      <input type="text" class="form-control" placeholder="Milestone Name" id="name" required name="name">
                  </div>
                </div>
                <div class="col">
                  <button type="submit" class="btn btn-primary">Add Milestone</button>
                </div>
              </div>
            </div>
          </div>
        </form>

        <!-- Edit Modal -->
        <form action="/project/edit/{{_id}}" method="post" >
            <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit Porject Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    
                    <div class="row">
                      <div class="form-group">
                      <label>Project Name:</label>
                      <input type="text" class="form-control" value="{{title}}" required name="title">
                      </div>
                      <div class="form-group">
                          <label>Module:</label>
                          <input type="text" class="form-control" value="{{module}}" required name="module">
                      </div>
                      <div class="form-group">
                          <label>Due Date:</label>
                          <input type="date" class="form-control" value="{{dueDate}}" required  name="dueDate">
                      </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="hidden" id="id" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-success">Save</button>
                  </div>
                </div>
              </div>
            </div>
          </form>
  {{/project}}
</div>

<div class="container">
  {{#milestones}}
            <div class="container">
              <div class="row">
                <div class="card w-75">
                    <div class="card-body">
                    <div class="col-4">
                      <label><b>Milestone name:</b></label>
                      <p>{{name}}</p>
                    </div>
                    <div class="col-4">
                      <label><b>Is complete:</b></label>
                      <p>{{isComplete}}</p>
                    </div>
                    <div class="col-4">
                      <label><b>Completion date:</b></label>
                      <p>{{completionDate}}</p>
                    </div>
                    <div class="col">
                      <form action="/project/edit/{{projectId}}/deleteMilestone/{{_id}}" method="post" >
                        <input type="hidden" id="id" name="id" value="{{_id}}">
                        <button type="submit" class="btn btn-danger">
                            <span class="icon-trash"></span> Delete</a>
                        </button>
                      </form>
                    </div>
                    <div class="col">
                      <form action="/project/edit/{{projectId}}/editMilestone/{{_id}}" method="post" >
                        <input type="hidden" id="id" name="id" value="{{_id}}">
                        <button type="submit" class="btn btn-success">
                            Marks as complete
                        </button>
                      </form>
                    </div>
                  </div>
                </div> 
              </div>
            </div>
  {{/milestones}}
</div>




{{>footer}}