{{>header}}
<div class="container">
  <div class="row">
    <div class="col-sm"></div>
    <div class="col-sm">
    <h1>Create new Project</h1>
      <form action="/project/create" method="post">
        <div class="form-group">
            <label>Project Name:</label>
            <input type="text" class="form-control" placeholder="Project Name" required id="name" name="title">
        </div>
        <div class="form-group">
            <label>Module:</label>
            <input type="text" class="form-control" placeholder="Module" id="module" required name="module">
        </div>
        <div class="form-group">
            <label>Due Date:</label>
            <input type="date" class="form-control" placeholder="yyyy-mm-dd" id="due" required name="dueDate">
        </div>
        <a href="/project/">Back</a>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form> 
    </div>
    <div class="col-sm"></div>
  </div>
</div>

{{>footer}}